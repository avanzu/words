<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" crossorigin="anonymous">
        <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/superhero/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

{{ include('@App/Partials/project-header.html.twig') }}

<div class="container">
{% include '@App/Partials/flash-messages.html.twig' %}

{% if result is defined %}
    {# @var result \Components\Infrastructure\Response\Response #}
    {% if result.clientError %}
        <div class="alert alert-warning">
            {{ result.message }}
            {{ dump(result.previous) }}
        </div>
    {% endif %}
    
    {% if result.serverError %}
        <div class="alert alert-danger">
            {{ result.message }}
            {{ dump(result.previous) }}
        </div>
    {% endif %}
{% endif %}

{% block body %}

{% endblock %}

</div>
{% block javascripts %}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
{% endblock %}
{% block inline_scripts %}{% endblock %}
</body>
</html>
