<ol class="breadcrumb">
    <li><a href="{{ url('app_homepage') }}">Home</a></li>
    {% if breadcrumbs is defined %}
    {% for link in breadcrumbs %}
        {% if not loop.last %}
        <li><a href="{{ url(link.route, link.params) }}">{{ link.label }}</a></li>
        {% else %}
            <li class="active">{{ link.label }}</li>
        {% endif %}
    {% endfor %}
    {% endif %}
</ol>